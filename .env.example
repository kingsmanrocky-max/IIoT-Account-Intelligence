# ==============================================
# IIoT Account Intelligence - Production Environment
# ==============================================
# This file is used by docker-compose.prod.yml
# Copy this to .env and fill in your values

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_USER=iiot_user
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=iiot_intelligence

# ----------------------------------------------
# Authentication & Security
# ----------------------------------------------
# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-change-this-minimum-32-characters-long
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# Encryption Key - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ----------------------------------------------
# LLM API Keys
# ----------------------------------------------
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# X.ai API Key (Optional) - Get from: https://x.ai/api
XAI_API_KEY=xai-your-xai-api-key-here

# LLM Provider Configuration
LLM_PRIMARY_PROVIDER=openai
OPENAI_DEFAULT_MODEL=gpt-4

# ----------------------------------------------
# Webex Integration (Optional)
# ----------------------------------------------
# Webex Bot Token - Create at: https://developer.webex.com/my-apps/new/bot
WEBEX_BOT_TOKEN=your-webex-bot-token-here

# ----------------------------------------------
# Application URLs
# ----------------------------------------------
# API URL (adjust for your domain)
API_URL=https://yourdomain.com/api

# Frontend URL (adjust for your domain)
FRONTEND_URL=https://yourdomain.com

# Next.js Public API URL (leave empty for auto-detection or set explicitly)
NEXT_PUBLIC_API_URL=

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
# Log Level: debug, info, warn, error
LOG_LEVEL=info

# Report retention in days
REPORT_RETENTION_DAYS=90
