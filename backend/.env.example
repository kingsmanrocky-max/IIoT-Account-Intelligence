# Database - Using custom port 5433 to avoid conflicts
DATABASE_URL="postgresql://postgres:your-password@localhost:5433/iiot_intelligence"

# Server - Using custom port 4001 to avoid conflicts
NODE_ENV=development
PORT=4001
API_URL=http://localhost:4001

# Authentication
# IMPORTANT: Generate a strong random JWT secret (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-change-this-minimum-32-characters-long
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# Encryption - 32 bytes hex key for AES-256
# IMPORTANT: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# LLM API Keys
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# Get your X.ai API key from: https://x.ai/api
XAI_API_KEY=xai-your-xai-api-key-here

# LLM Configuration
LLM_PRIMARY_PROVIDER=openai
OPENAI_DEFAULT_MODEL=gpt-4
LLM_TIMEOUT=60000
LLM_MAX_RETRIES=3
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_MAX_TOKENS=4000

# Webex Bot Configuration
# Create a bot at: https://developer.webex.com/my-apps/new/bot
WEBEX_BOT_TOKEN=your-webex-bot-token-here

# File Storage
STORAGE_PATH=./storage/reports
MAX_FILE_SIZE=10485760

# Report Settings
REPORT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Redis (optional) - Using custom port 6380
REDIS_URL=redis://localhost:6380

# Frontend URL
FRONTEND_URL=http://localhost:4000

# FFmpeg Configuration (optional - only if not in PATH)
# If FFmpeg is not automatically detected, specify full paths
# FFMPEG_PATH=/usr/local/bin/ffmpeg
# FFPROBE_PATH=/usr/local/bin/ffprobe
